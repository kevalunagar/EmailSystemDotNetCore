@model MailViewModel
@{
ViewBag.Title="compose";
}
@section Styles{
<link rel="stylesheet" href="/lib/jquery-te/jquery-te.css" />
<link rel="stylesheet" href="/css/compose.css" />
}
<form method="post">
    <div class="card">
        <div class="card-body">
            <p class="card-text">
                <div asp-validation-summary="All" class="errorMsg text-danger"></div>
                <label asp-for="receiverUserEmail"></label>
                <input asp-for="receiverUserEmail" placeholder="Enter Email" /><br />
                <br />
                <label asp-for="Subject"></label>
                <input asp-for="Subject" placeholder="Enter Subject" /><br/>
                <br />
                <label asp-for="Description"></label>
                <textarea class="textEditor" asp-for="Description"></textarea>
            </p>
            <button type="submit" class="btn" >Send</button>
        </div>
    </div>
</form>

@section Scripts{
<script src="/lib/jquery-te/jquery-te.min.js" type="text/javascript"></script>
<script>
    $(".textEditor").jqte();
</script>
}