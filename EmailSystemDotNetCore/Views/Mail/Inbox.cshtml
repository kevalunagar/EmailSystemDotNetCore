@model IEnumerable<Mail>
@{
    ViewBag.Title = "Inbox";
}
@section Styles{

}
<div class="btnPanel">
    <a asp-action="Inbox"><i class="fas fa-redo"></i></a>
</div>

<div class="mainSection">
    <table class="table table-hover">
        <tbody>
            @foreach (var mail in Model)
            {
                <tr  onclick="location.href = '@Url.Action("Details", "Mail", new { id = mail.Id })'" class="@(mail.MarkAsRead?"":"markAsReadClass")">
                    <td>
                        <a asp-route-id=@mail.Id asp-action="starredBtnClick"><i class="@(mail.starred?"fas fa-star fa-lg":"far fa-star fa-lg")"></i></a>
                    </td>
                    <td>
                        @(mail.SenderUserModel.FirstName+" "+mail.SenderUserModel.LastName)
                    </td>
                    <td>
                        @mail.Subject
                    </td>
                    <td>
                        @mail.Date
                    </td>
                    <td>
                        <a asp-route-id=@mail.Id asp-action="deleteBtnClick">
                            <i class="fa fa-trash fa-lg"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-route-id=@mail.Id asp-action="markAsReadClick">
                            <i class="@(mail.MarkAsRead?"fa fa-envelope fa-lg":"fa fa-envelope-open fa-lg")"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{

}
